<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/gradient_background"
    android:gravity="center">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Categories \n\nकौन सा विषय चुनें?"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnFruits"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="फल (Fruits)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/category_button_fruits"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <Button
            android:id="@+id/btnAnimals"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="जानवर (Animals)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/category_button_animals"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <Button
            android:id="@+id/btnVegetables"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="सब्जियां (Vegetables)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/category_button_vegetables"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <Button
            android:id="@+id/btnMonuments"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="स्मारक (Monuments)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/category_button_monuments"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="अपनी पसंदीदा श्रेणी चुनें और खेल शुरू करें!"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

</LinearLayout>